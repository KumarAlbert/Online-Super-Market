<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.Category" table="Category">
      <meta attribute="class-description">
         This class contains the Category detail. 
      </meta>
      <id name="id" type="int" column="id">
   
      </id>
      <property name="name" column="name" type="string"/>
      <property name="createdBy" column="createdBy" type="int"/>
      <property name="createdAt" column="createdAt" type="time"/>
      <property name="modifiedBy" column="modifiedBy" type="int"/>
      <property name="modifiedAt" column="modifiedAt" type="time"/>
      <set name="subcategories" table="Subcategory" 
				inverse="true" lazy="false" fetch="select">
            <key column="categoryId"/>
            <one-to-many class="model.Subcategory" />
      </set>
   </class>
</hibernate-mapping>