<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.Cart" table="Cart">
      <meta attribute="class-description">
         This class contains the Cart detail. 
      </meta>
      <id name="id" type="int" column="id">
      </id>

      <property name="orderId" column="orderId" type="int"/>
            <property name="quantity" column="quantity" type="int"/>
      <property name="totalPrice" column="totalPrice" type="double"/>
      <property name="createdBy" column="createdBy" type="int"/> 
      <property name="createdAt" column="createdAt" type="time"/>
      <property name="modifiedBy" column="modifiedBy" type="int"/>     
      <property name="modifiedAt" column="modifiedAt" type="time"/>
      
      <many-to-one name="Product" class="model.Product" fetch="select">
            <column name="productId" not-null="false" />
      </many-to-one>
      
      <many-to-one name="PurchaseOrder" class="model.PurchaseOrder" fetch="select">
            <column name="orderId" not-null="false" />
      </many-to-one>
   </class>
</hibernate-mapping>