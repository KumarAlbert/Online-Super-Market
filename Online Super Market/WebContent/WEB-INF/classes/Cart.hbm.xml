<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping>
   <class name="com.i2i.model.Cart" table="Cart">
      <meta attribute="class-description">
         This class contains the Cart detail. 
      </meta>
      <id name="id" type="int" column="id">
      </id>

      <property name="quantity" column="quantity" type="int"/>
      <property name="totalPrice" column="total" type="double"/>
      <property name="createdBy" column="createdBy" type="int"/> 
      <property name="createdAt" column="createdAt" type="timestamp"/>
      <property name="modifiedBy" column="modifiedBy" type="int"/>     
      <property name="modifiedAt" column="modifiedAt" type="timestamp"/>
      
     <many-to-one name="product" class="com.i2i.model.Product" lazy="false" fetch="select">
            <column name="productId" />
      </many-to-one>
      
      <many-to-one name="purchaseOrder" lazy="false" class="com.i2i.model.PurchaseOrder" fetch="select">
            <column name="purchaseOrderId" not-null="false" />
      </many-to-one>
   </class>
</hibernate-mapping>
