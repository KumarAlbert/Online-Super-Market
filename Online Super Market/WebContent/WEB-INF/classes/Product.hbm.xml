<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.i2i.model.Product" table="Product">
      <meta attribute="class-description">
         This class contains the Product detail. 
      </meta>
      <id name="id" type="int" column="id">
      </id>
      <property name="name" column="name" type="string"/>
      <property name="description" column="description" type="string"/>
      <property name="imageUrl" column="imageUrl" type="string"/>
      <property name="stock" column="stock" type="int"/>
      <property name="price" column="price" type="double"/>
      <property name="createdBy" column="createdBy" type="int"/> 
      <property name="createdAt" column="createdAt" type="timestamp"/>
      <property name="modifiedBy" column="modifiedBy" type="int"/>     
      <property name="modifiedAt" column="modifiedAt" type="timestamp"/>
	  <set name="carts" table="Cart" 
				inverse="true" lazy="false" fetch="select">
            <key column="productId"/>
            <one-to-many class="com.i2i.model.Cart"/>
      </set>
      <many-to-one name="subcategory" class="com.i2i.model.Subcategory" lazy="false" fetch="select">
            <column name="subcategoryId" not-null="false" />
      </many-to-one>
   </class>
</hibernate-mapping>