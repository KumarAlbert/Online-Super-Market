<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.Product" table="Product">
      <meta attribute="class-description">
         This class contains the Product detail. 
      </meta>
      <id name="id" type="int" column="id">
      </id>
      <property name="name" column="name" type="string"/>
      <property name="description" column="description" type="string"/>
      <property name="imageUrl" column="imageUrl" type="string"/>
      <property name="stock" column="stock" type="int"/>
      <property name="createdBy" column="createdBy" type="int"/> 
      <property name="createdAt" column="createdAt" type="time"/>
      <property name="modifiedBy" column="modifiedBy" type="int"/>     
      <property name="modifiedAt" column="modifiedAt" type="time"/>
      
      <many-to-one name="Subcategory" class="model.Subcategory" fetch="select">
            <column name="subcategoryId" not-null="false" />
      </many-to-one>
      <set name="cart" table="Cart" 
		                   inverse="true" lazy="false" fetch="select">
            <key column="productId"/>
            <one-to-many class="model.Cart" />
      </set>
   </class>
</hibernate-mapping>